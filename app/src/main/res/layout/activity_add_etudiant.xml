<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    android:backgroundTint="#EDE7F6"
    android:orientation="vertical"
    tools:context=".addEtudiant">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar3"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#7B1FA2"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Add Student"
        app:titleTextColor="#1A1818" />

    <TextView
        android:id="@+id/textView"
        style="@style/text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:text="Nom "
        android:textSize="20dp" />

    <EditText
        android:id="@+id/nom"
        style="@style/input"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView2"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:text="Prenom "
        android:textSize="20dp" />

    <EditText
        android:id="@+id/prenom"
        style="@style/input"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView3"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:text="Ville"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/ville"
        style="@style/input"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:entries="@array/villes"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView4"
        style="@style/text"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:text="Sexe"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/sexe"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/homme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:padding="10dp"
            android:text="Homme"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/femme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:padding="10dp"
            android:text="Femme"
            android:textSize="20dp" />
    </RadioGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/choose_image"
            android:layout_width="193dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="92dp"
            android:backgroundTint="#EDE7F6"
            android:text="Choisir une image"
            android:textAlignment="textStart"
            android:textColor="#E61F1F"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ajouter"
            app:layout_constraintEnd_toStartOf="@+id/choose_image"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#7B1FA2"
        android:padding="10dp"
        android:text="Add"
        android:textColor="@color/black"
        android:textSize="20dp" />


</LinearLayout>
